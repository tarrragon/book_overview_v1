  "conflictResolutionExamples": [
    {
      "scenario": "progress_conflict",
      "description": "相同書籍不同進度",
      "localBook": {
        "id": "conflict-001",
        "title": "衝突測試書籍",
        "progress": 45,
        "lastModified": "2025-08-23T10:00:00Z"
      },
      "remoteBook": {
        "id": "conflict-001",
        "title": "衝突測試書籍", 
        "progress": 70,
        "lastModified": "2025-08-24T10:00:00Z"
      },
      "recommendedStrategy": "keep_highest_progress",
      "expectedResult": {
        "progress": 70,
        "reason": "保留較高的閱讀進度"
      }
    },
    {
      "scenario": "title_conflict",
