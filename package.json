{
  "name": "readmoo-book-extractor",
  "version": "0.12.0",
  "description": "一個專為Readmoo電子書平台設計的Chrome擴充功能，能夠自動提取使用者書庫資料，並提供本地化的書目管理與匯出功能。",
  "main": "src/background/service-worker.js",
  "scripts": {
    "test": "npm run test:core",
    "test:core": "jest tests/unit tests/integration",
    "test:all": "jest",
    "test:watch": "jest --watch tests/unit tests/integration",
    "test:coverage": "jest --coverage tests/unit tests/integration",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:unification": "node scripts/run-unification-test.js",
    "test:e2e": "echo '⚠️  E2E tests temporarily disabled due to Puppeteer WebSocket issues. See docs/work-logs/v0.8.9-e2e-fix-work-log.md'",
    "test:e2e:force": "jest tests/e2e",
    "test:e2e:full": "node tests/e2e/scripts/run-e2e-tests.js",
    "test:e2e:workflow": "jest tests/e2e/workflows",
    "test:e2e:integration": "jest tests/e2e/integration",
    "test:e2e:performance": "jest tests/e2e/performance",
    "test:comprehensive": "npm run test:unit && npm run test:integration && npm run test:e2e:force",
    "build": "node scripts/build.js",
    "build:dev": "node scripts/build.js --dev",
    "build:prod": "node scripts/build.js --prod",
    "validate:build": "node scripts/validate-build.js",
    "validate:build:prod": "node scripts/validate-build.js --prod",
    "dev": "npm run build:dev && npm run test:watch",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "format:md": "prettier --write \"**/*.md\"",
    "format:docs": "prettier --write \"docs/**/*.md\"",
    "serve": "http-server build/development -p 8080",
    "clean": "rimraf build/ coverage/ test-results/",
    "docs": "jsdoc src/ -r -d docs/generated"
  },
  "keywords": [
    "chrome-extension",
    "readmoo",
    "ebook",
    "data-extraction",
    "book-management",
    "taiwan"
  ],
  "author": "開發者名稱",
  "license": "MIT",
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.4",
    "@types/chrome": "^0.0.246",
    "@types/jest": "^29.5.5",
    "eslint": "^8.50.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-n": "^17.21.3",
    "eslint-plugin-promise": "^7.2.1",
    "http-server": "^14.1.1",
    "jest": "^29.7.0",
    "jest-chrome": "^0.8.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "jsdoc": "^4.0.2",
    "jsdom": "^26.1.0",
    "prettier": "^3.6.2",
    "puppeteer": "^21.3.6",
    "rimraf": "^5.0.5"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/test-setup.js"
    ],
    "testMatch": [
      "<rootDir>/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.config.js",
      "!src/**/index.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "moduleNameMapper": {
      "^src/(.*)$": "<rootDir>/src/$1",
      "^@/(.*)$": "<rootDir>/src/$1",
      "^@tests/(.*)$": "<rootDir>/tests/$1",
      "^@mocks/(.*)$": "<rootDir>/tests/mocks/$1",
      "^@fixtures/(.*)$": "<rootDir>/tests/fixtures/$1"
    },
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/build/"
    ],
    "verbose": true
  },
  "eslintConfig": {
    "extends": [
      "standard"
    ],
    "env": {
      "browser": true,
      "node": true,
      "jest": true,
      "webextensions": true
    },
    "globals": {
      "chrome": "readonly"
    },
    "rules": {
      "no-console": "warn",
      "no-debugger": "error",
      "prefer-const": "error",
      "no-unused-vars": "warn",
      "no-case-declarations": "warn",
      "no-prototype-builtins": "warn",
      "new-cap": "warn",
      "no-new": "warn",
      "no-extend-native": "warn",
      "promise/param-names": "warn",
      "n/no-callback-literal": "warn",
      "no-useless-catch": "warn",
      "no-unreachable": "warn",
      "no-empty": "warn",
      "no-useless-constructor": "warn",
      "brace-style": "warn",
      "no-dupe-class-members": "warn",
      "multiline-ternary": "warn",
      "no-control-regex": "warn",
      "no-use-before-define": "warn",
      "no-eval": "warn",
      "n/handle-callback-err": "warn",
      "accessor-pairs": "warn"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/readmoo-book-extractor.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/readmoo-book-extractor/issues"
  },
  "homepage": "https://github.com/your-username/readmoo-book-extractor#readme"
}
